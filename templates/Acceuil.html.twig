{# templates/Acceuil.html.twig #}
{% extends('base.html.twig') %}

{% block javascripts %}
    {{ encore_entry_script_tags('app_acceuil') }}
    {{ parent() }}
{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('css_acceuil') }}
    {{ parent() }}
{% endblock %}

{% block body %}
    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        <div><h2>Welcome Back {{ app.user.Tag }}</h2></div>
    {% endif %}
    <div class="slideshow-container">

        <!-- Full-width images with number and caption text -->
        <div class="mySlides fade">
            <div class="numbertext">1 / 3</div>
            <img src="{{ asset('build/images/paysage1.5e77a739.png') }}" style="width:100%">

        </div>

        <div class="mySlides fade">
            <div class="numbertext">2 / 3</div>
            <img src="{{ asset('build/images/paysage2.f1a0a073.png') }}" style="width:100%">

        </div>

        <div class="mySlides fade">
            <div class="numbertext">3 / 3</div>
            <img src="{{ asset('build/images/paysage3.09f1f610.png') }}" style="width:100%">

        </div>

        <!-- Next and previous buttons -->
        <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
        <a class="next" onclick="plusSlides(1)">&#10095;</a>
    </div>

    <div class="carousel-container">
        <div class="carouselSlides">

            <img src="{{ asset('build/images/paysage1.5e77a739.png') }}" >
            <div> Meilleure Ventes</div>

        </div>
        <div class="carouselSlides">

            <img src="{{ asset('build/images/paysage2.f1a0a073.png') }}" >
            <div> Meilleure rapporte qualité prix</div>
        </div>
        {% for i in 0 .. 10 %}
        <div class="carouselSlides">

            <img src="{{ asset('build/images/paysage3.09f1f610.png') }}" >
            <div> Vous allez aimé</div>
        </div>
        {% endfor %}

    </div>



{% endblock %}

