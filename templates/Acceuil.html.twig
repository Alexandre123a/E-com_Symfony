{# templates/Acceuil.html.twig #}
{% extends('base.html.twig') %}

{% block javascripts %}
    {{ encore_entry_script_tags('app_acceuil') }}
    {{ parent() }}
{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('css_acceuil') }}
    {{ parent() }}
{% endblock %}

{% block body %}
    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        <div><h2>Welcome Back {{ app.user.Tag }}</h2></div>
    {% endif %}
    <div class="slideshow-container">

        <!-- Full-width images with number and caption text -->
        <div class="mySlides fade">
            <div class="numbertext">1 / 3</div>
            <img src="{{ asset('build/images/paysage1.5e77a739.png') }}" style="width:100%">

        </div>

        <div class="mySlides fade">
            <div class="numbertext">2 / 3</div>
            <img src="{{ asset('build/images/paysage2.f1a0a073.png') }}" style="width:100%">

        </div>

        <div class="mySlides fade">
            <div class="numbertext">3 / 3</div>
            <img src="{{ asset('build/images/paysage3.09f1f610.png') }}" style="width:100%">

        </div>

        <!-- Next and previous buttons -->
        <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
        <a class="next" onclick="plusSlides(1)">&#10095;</a>
    </div>

    <div class="carousel-container">


        {% for article in articles %}
        <div class="carouselSlides">
            <a href="{{ path('app_article_stock_show', {'id': article.0.id}) }}">
                <div class="card">
                    <div class="container">
                        <h4><b>{{ article.0.intitule }}</b><br>
                            {{ article.0.prix }}â‚¬
                        </h4>
                        <div class="description">
                        {{ article.0.description }}
                        </div>
                    </div>
                </div>
            </a>
        </div>
        {% endfor %}

    </div>



{% endblock %}

