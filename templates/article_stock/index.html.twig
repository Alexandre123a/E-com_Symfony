{% extends 'base.html.twig' %}

{% block title %}ArticleStock index{% endblock %}

{% block body %}
    <h1>ArticleStock index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Intitule</th>
                <th>Prix</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article_stock in article_stocks %}
            <tr>
                <td>{{ article_stock.id }}</td>
                <td>{{ article_stock.intitule }}</td>
                <td>{{ article_stock.prix }}</td>
                <td>{{ article_stock.description }}</td>
                <td>
                    <a href="{{ path('app_article_stock_show', {'id': article_stock.id}) }}">show</a>
                    <a href="{{ path('app_article_stock_edit', {'id': article_stock.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_article_stock_new') }}">Create new</a>
{% endblock %}
